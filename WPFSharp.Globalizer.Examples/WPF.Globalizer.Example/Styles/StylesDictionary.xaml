    <Style TargetType="{x:Type Label}">
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="FontSize" Value="{DynamicResource ResourceKey=CommonFontSize}" />
        <Setter Property="Margin" Value="2" />
    </Style>
</ResourceDictionary>