<Globalization:EnhancedResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:Globalization="clr-namespace:WPFSharp.Globalizer.Base;assembly=WPFSharp.Globalizer.Base"
    Name="he-IL"
    Type="Globalization"
    >

    <FlowDirection x:Key="FlowDirection_Default">RightToLeft</FlowDirection>
    <FlowDirection x:Key="FlowDirection_Reverse">LeftToRight</FlowDirection>

    <!-- Main Window -->
    <sys:String x:Key="MainWindow_Title">WPF Globalization Example (Hebrew)</sys:String>

    <!-- Menu strings -->
    <sys:String x:Key="Menu_File">קובץ</sys:String>
    <sys:String x:Key="Menu_File_Exit">קובץ</sys:String>
    <sys:String x:Key="Menu_Language">_שפה</sys:String>
    <sys:String x:Key="Menu_Language_English">(en-US) אנגלית</sys:String>
    <sys:String x:Key="Menu_Language_Spanish">(es-ES) ספרדית</sys:String>
    <sys:String x:Key="Menu_Language_Hebrew">(he-IL) עברית</sys:String>

    <!-- Form strings -->
    <sys:String x:Key="Form_FirstName">שם פרטי</sys:String>
    <sys:String x:Key="Form_LastName">שם משפחה</sys:String>
    <sys:String x:Key="Form_Age">גיל</sys:String>
    <sys:String x:Key="Form_Button_Clear">ברור</sys:String>
</Globalization:EnhancedResourceDictionary>